<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/p_full"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Get all groups"
        android:background="@color/colorAccent"
        android:id="@+id/btn_sanction_get_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/s_sanction_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/s_sanction_foul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sanction_show_groups"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Small"
        android:text="@string/tmn_sanction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>